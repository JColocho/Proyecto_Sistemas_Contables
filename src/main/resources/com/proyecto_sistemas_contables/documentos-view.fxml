<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" style="-fx-background-color: #D9D9D9;" stylesheets="@static/css/vistas.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.proyecto_sistemas_contables.DocumentosController">
    <children>
        <VBox alignment="TOP_CENTER" spacing="15.0" styleClass="contenedor" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
            <children>
                <!-- Título Principal -->
                <Label alignment="CENTER" style="-fx-font-weight: bold; -fx-font-size: 18px;" text="Gestión de Documentos">
                    <VBox.margin>
                        <Insets bottom="10.0" top="10.0" />
                    </VBox.margin>
                </Label>

                <!-- Contenedor Principal Responsivo -->
                <HBox spacing="20.0" VBox.vgrow="ALWAYS">
                    <children>
                        <!-- Panel Izquierdo - Documentos de Partidas -->
                        <VBox prefHeight="437.0" prefWidth="419.0" spacing="10.0" styleClass="contenedorRedondeado" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                            <children>
                                <!-- Título Sección -->
                                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Documentos de Partidas" />

                                <!-- Filtro por Fecha -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Fecha:" />
                                        <DatePicker fx:id="dpFechaPartida" prefWidth="150.0" promptText="Seleccione fecha" HBox.hgrow="ALWAYS" />
                                        <Button fx:id="btnLimpiarFecha" mnemonicParsing="false" styleClass="btnRojo" text="Limpiar" />
                                    </children>
                                </HBox>

                                <!-- ComboBox para filtrar por tipo de documento -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Tipo Documento:" />
                                        <ComboBox fx:id="cbClasificacionPartidas" prefWidth="200.0" promptText="Seleccione tipo" HBox.hgrow="ALWAYS">
                                        </ComboBox>
                                    </children>
                                </HBox>

                                <!-- TableView de Documentos de Partidas -->
                                <TableView fx:id="tvDocumentosPartidas" prefHeight="274.0" prefWidth="319.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="clNumeroAsiento" prefWidth="80.0" text="N° Asiento" />
                                        <TableColumn fx:id="clFecha" prefWidth="100.0" text="Fecha" />
                                        <TableColumn fx:id="clNumeroDoc" prefWidth="100.0" text="N° Documento" />
                                        <TableColumn fx:id="clTipoDocumento" prefWidth="150.0" text="Tipo Documento" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>

                                <!-- Botones de Acción -->
                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnVerDocumento" mnemonicParsing="false" styleClass="btnAzul" text="Ver Documento" />
                                        <Button fx:id="btnDescargarPartida" mnemonicParsing="false" styleClass="btnVerde" text="Guardar Copia" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                        </VBox>

                        <!-- Panel Derecho - Reportes -->
                        <VBox spacing="10.0" styleClass="contenedorRedondeado" HBox.hgrow="ALWAYS">
                            <padding>
                                <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                            </padding>
                            <children>
                                <!-- Título Sección -->
                                <Label style="-fx-font-weight: bold; -fx-font-size: 14px;" text="Reportes" />

                                <!-- ComboBox para filtrar -->
                                <HBox alignment="CENTER_LEFT" spacing="10.0">
                                    <children>
                                        <Label text="Tipo de Reporte:" />
                                        <ComboBox fx:id="cbTipoReporte" prefWidth="200.0" promptText="Seleccione un tipo" HBox.hgrow="ALWAYS">
                                        </ComboBox>
                                    </children>
                                </HBox>

                                <!-- TableView de Reportes -->
                                <TableView fx:id="tvReportes" prefHeight="274.0" prefWidth="117.0" VBox.vgrow="ALWAYS">
                                    <columns>
                                        <TableColumn fx:id="clDocumento" prefWidth="150.0" text="Documento" />
                                        <TableColumn fx:id="clDesde" prefWidth="100.0" text="Desde" />
                                        <TableColumn fx:id="clHasta" prefWidth="100.0" text="Hasta" />
                                    </columns>
                                    <columnResizePolicy>
                                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                    </columnResizePolicy>
                                </TableView>

                                <!-- Botones de Acción -->
                                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                                    <children>
                                        <Button fx:id="btnVerReporte" mnemonicParsing="false" styleClass="btnAzul" text="Ver Reporte" />
                                        <Button fx:id="btnDescargarReporte" mnemonicParsing="false" styleClass="btnVerde" text="Guardar Copia" />
                                    </children>
                                    <VBox.margin>
                                        <Insets top="10.0" />
                                    </VBox.margin>
                                </HBox>
                            </children>
                        </VBox>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" left="20.0" right="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
