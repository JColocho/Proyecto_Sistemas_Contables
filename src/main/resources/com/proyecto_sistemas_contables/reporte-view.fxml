<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane prefHeight="750.0" prefWidth="1200.0"
            style="-fx-background-color: linear-gradient(to bottom right, #f4f6f9, #e9ecef);"
            stylesheets="@static/css/vistas.css"
            xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.proyecto_sistemas_contables.ReporteController">

    <children>
        <ScrollPane fitToWidth="true" fitToHeight="true"
                    style="-fx-background-color: transparent; -fx-background: transparent;"
                    AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <content>
                <VBox spacing="25.0" style="-fx-padding: 40;" minHeight="1100.0">

                    <!-- Encabezado -->
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <children>
                            <VBox spacing="5">
                                <Label style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                                       text=" Generador de Reportes Contables" />
                                <Label style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"
                                       text="Elija tipo de reporte, periodo y genere un PDF o vista previa" />
                            </VBox>
                            <Region HBox.hgrow="ALWAYS" />
                            <Button fx:id="btnExportarPDF" prefHeight="45.0" prefWidth="150.0"
                                    style="-fx-font-size: 15;" styleClass="btnVerde"
                                    text="Exportar PDF" />
                        </children>
                    </HBox>

                    <!-- Panel de configuraci贸n del reporte -->
                    <AnchorPane style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 12,0,0,3); -fx-padding: 25;">
                        <children>
                            <VBox spacing="20" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

                                <!-- Secci贸n 1: Tipo de reporte y periodo -->
                                <GridPane hgap="25" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="25.0" hgrow="SOMETIMES" />
                                        <ColumnConstraints percentWidth="25.0" hgrow="SOMETIMES" />
                                        <ColumnConstraints percentWidth="25.0" hgrow="SOMETIMES" />
                                        <ColumnConstraints percentWidth="25.0" hgrow="SOMETIMES" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints />
                                        <RowConstraints />
                                    </rowConstraints>

                                    <!-- Tipo de reporte -->
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 16px;"
                                           text="Tipo de reporte:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <ComboBox fx:id="cmbTipoReporte" prefHeight="39.0" maxWidth="Infinity"
                                              style="-fx-font-size: 14px;" promptText="Seleccionar tipo..."
                                              GridPane.columnIndex="0" GridPane.rowIndex="1" />

                                    <!-- Periodo r谩pido -->
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 16px;"
                                           text="Periodo r谩pido:" GridPane.columnIndex="1" GridPane.rowIndex="0" />
                                    <ComboBox fx:id="cmbPeriodoRapido" prefHeight="39.0" maxWidth="Infinity"
                                              style="-fx-font-size: 14px;" promptText="Seleccionar periodo..."
                                              GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                    <!-- Fecha desde -->
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 16px;"
                                           text="Fecha desde:" GridPane.columnIndex="2" GridPane.rowIndex="0" />
                                    <DatePicker fx:id="dateDesde" prefHeight="39.0" maxWidth="Infinity"
                                                style="-fx-font-size: 14px;" promptText="dd/mm/aaaa"
                                                GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                    <!-- Fecha hasta -->
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 16px;"
                                           text="Fecha hasta:" GridPane.columnIndex="3" GridPane.rowIndex="0" />
                                    <DatePicker fx:id="dateHasta" prefHeight="39.0" maxWidth="Infinity"
                                                style="-fx-font-size: 14px;" promptText="dd/mm/aaaa"
                                                GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                </GridPane>

                                <!-- Separador -->
                                <Separator style="-fx-background-color: #dee2e6;" />

                                <!-- Secci贸n 2: Observaciones y acciones -->
                                <GridPane hgap="25" vgap="12">
                                    <columnConstraints>
                                        <ColumnConstraints percentWidth="15.0" hgrow="SOMETIMES" />
                                        <ColumnConstraints percentWidth="55.0" hgrow="SOMETIMES" />
                                        <ColumnConstraints percentWidth="15.0" hgrow="SOMETIMES" />
                                        <ColumnConstraints percentWidth="15.0" hgrow="SOMETIMES" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints />
                                        <RowConstraints />
                                    </rowConstraints>

                                    <!-- Observaciones -->
                                    <Label style="-fx-font-weight: bold; -fx-text-fill: #495057; -fx-font-size: 16px;"
                                           text="Observaciones:" GridPane.columnIndex="0" GridPane.rowIndex="0"
                                           GridPane.columnSpan="2" />
                                    <TextField fx:id="txtObservaciones" prefHeight="39.0" maxWidth="Infinity"
                                               style="-fx-font-size: 14px;" promptText="Ingrese notas o comentarios sobre este reporte..."
                                               GridPane.columnIndex="0" GridPane.rowIndex="1" GridPane.columnSpan="2" />

                                    <!-- Bot贸n Generar -->
                                    <Button fx:id="btnGuardar" mnemonicParsing="false"
                                            prefHeight="39.0" maxWidth="Infinity"
                                            styleClass="btnAzul" text="Generar"
                                            GridPane.columnIndex="2" GridPane.rowIndex="1" />

                                    <!-- Bot贸n Limpiar -->
                                    <Button fx:id="btnLimpiar" mnemonicParsing="false"
                                            prefHeight="39.0" maxWidth="Infinity"
                                            styleClass="btnRojo" text="Limpiar"
                                            GridPane.columnIndex="3" GridPane.rowIndex="1" />
                                </GridPane>
                            </VBox>
                        </children>
                    </AnchorPane>

                    <!-- Panel de previsualizaci贸n -->
                    <AnchorPane style="-fx-background-color: white; -fx-background-radius: 12; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 12,0,0,3); -fx-padding: 20;"
                                minHeight="550.0" prefHeight="600.0">

                        <VBox spacing="15" AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
                              AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">

                            <!-- Header de previsualizaci贸n -->
                            <HBox alignment="CENTER_LEFT" spacing="15">
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"
                                       text=" Previsualizaci贸n del Reporte" />
                                <Label fx:id="lblPreviewInfo" style="-fx-font-size: 13px; -fx-text-fill: #7f8c8d;"
                                       text="" />
                                <Region HBox.hgrow="ALWAYS" />
                                <Label fx:id="lblRegistros" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #495057;"
                                       text="0 registros encontrados" />
                            </HBox>

                            <!-- Separador -->
                            <Separator style="-fx-background-color: #dee2e6;" />

                            <!-- Contenedor fijo para tabla -->
                            <AnchorPane minHeight="420.0" prefHeight="470.0" VBox.vgrow="ALWAYS">
                                <ScrollPane fitToHeight="true" fitToWidth="true"
                                            style="-fx-background-color: transparent; -fx-background: transparent;"
                                            AnchorPane.topAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                            AnchorPane.rightAnchor="0.0" AnchorPane.bottomAnchor="0.0">
                                    <TableView fx:id="tblPreview" prefHeight="300" />
                                </ScrollPane>
                            </AnchorPane>

                            <!-- Footer informativo -->
                            <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-padding: 10 0 0 0;">
                                <Label style="-fx-font-size: 12px; -fx-text-fill: #95a5a6;"
                                       text=" Tip: Seleccione el tipo de reporte y el periodo para generar la previsualizaci贸n" />
                                <Region HBox.hgrow="ALWAYS" />
                            </HBox>
                        </VBox>
                    </AnchorPane>

                </VBox>
            </content>
        </ScrollPane>
    </children>
</AnchorPane>